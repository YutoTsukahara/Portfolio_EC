<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>
  
<h1 class="mb-4">All items</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="bg-light p-2 mt-2">
        <div class="appeal">
          <%= link_to product_path(product) do %>
              <%= image_tag product.image.url, :width => '90%', :height => 'auto' %>
            <div class="mask">
              <div class="caption">Click it and see the item details.</div>
            </div>
          <% end %>
      </div>
        <p class="h4 pl-3"><%= product.name %></p>
        <p class="h5 pl-3"><%= product.price.to_s(:delimited) %>å††</p>
      </div>
    </div>
  <% end %>
 </div>

 <%= paginate @products %>
 
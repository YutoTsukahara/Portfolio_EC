<!DOCTYPE html>
<html>
  <head>
    <title>Sample_ECsite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/16090d1398.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav class="navbar navbar-expand navbar-dark bg-dark fixed-top">
      <%= link_to "Sample ECsite", root_path, id: "logo", class: "navbar-brand" %>
      <ul class="navbar-nav ml-auto">
      
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link" do %>
              <i class="fas fa-home"></i>
          <% end %>
        </li>

      <% if current_user.present? %>
        <li class="nav-item">
          <%= link_to destroy_user_session_path, :method => :delete, class: "nav-link" do %>
            <i class="fas fa-door-open"></i>
          <% end %>
        </li>
      <% else%>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "nav-link" do %>
            <i class="fas fa-sign-in-alt"></i>
          <% end %>
        </li>
      <% end %>
      
        <li class="nav-item">
          <%= link_to favorite_path, class: "nav-link" do %>
            <i class="fas fa-heart"></i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to basket_path, class: "nav-link" do %>
            <i class="fas fa-shopping-cart"></i>
          <% end %>
        </li>
      </ul>
    </nav>

    <% unless current_user.present? || current_admin.present? %>
      <div class="text-right">
        <%= link_to  new_user_registration_path do %>
          <div class="btn btn-warning">New Registration</div>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>

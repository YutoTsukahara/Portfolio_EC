<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>売り上げ日</th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_record_products.each do |purchase_record_product| %>
      <% product = purchase_record_product.product %>
      <tr>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= product.price  %> 円
        </td>
        <td>
          <%= purchase_record_product.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

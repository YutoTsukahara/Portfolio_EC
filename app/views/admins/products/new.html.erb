<div class="border p-5 m-4"> 
  <div class="pb-4">
    <h1>Product New</h1>
  </div>
  <%= form_for([:admin, @product], url:{controller:'products', action: 'create'}) do |f| %>
    <div class="form-group">
      <label for="name">Name</label>
      <%= f.text_field :name, class:"form-control" %>
    </div>

    <div class="form-group">
    <label for="description">Description</label>
    <%= f.text_area :description, {row:3, class:"form-control"} %>
    </div>
    
    <div class="form-group">
    <label for="price">Price</label>
    <%= f.text_field :price, class:"form-control" %>
    </div>

    <div class="form-group">
    <label for="image">Image</label>
    <%= f.file_field :image, accept:"image/jpg,image/jpeg,image/png", class:"form-control-file" %>
    </div>


    <%= f.submit "Add product", class:"btn btn-dark" %>
  <% end %>
</div>
